#include <stdio.h>
#include <stdlib.h>
/*
2. Declare uma matriz 5 x 5. Preencha com 1 a diagonal principal e com 0 os demais
elementos. Escreva ao final a matriz obtida.
*/
int main(){
	int i, j, matriz[5][5];
	
	for(i=0; i<5; i++){
		for(j=0; j<5; j++){
			if(i==j){
				matriz[i][j]=1;
			}
			else{
				matriz[i][j]=0;			
			}
		}
	}
	
	printf("A matriz eh: \n\n");
	for(i=0; i<5; i++){
		for(j=0; j<5; j++){
			printf("%d ", matriz[i][j]);
		}
		printf("\n");
	}
	return 0;
}
