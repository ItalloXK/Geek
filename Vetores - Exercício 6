#include <stdio.h>
#include <stdlib.h>

/*6. Faça um programa que receba do usuário um vetor com 10 posições. 
Em seguida deverá ser impresso o maior e o menor elemento do vetor.
*/

int main(){
	int vet[100],i, maior = -1000000000, menor = 1000000000;
	
	printf("Digite os valores: \n");
	for(i=0; i<10;i++){
		scanf("%d", &vet[i]);
		fflush(stdin);
			if(vet[i]>= maior){
				maior = vet[i];
			}
			if(vet[i]<= menor){
				menor = vet[i];
			}
		}
		
		printf("\nO maior valor eh: %d\n", maior);
		printf("\nO menor valor eh: %d\n", menor);
		
		return 0;
	}

	
